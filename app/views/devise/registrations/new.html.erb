<% content_for :introduction do %>
  <h1 class="mb-3">Welcome Back!</h1>
  <h5 class="mb-3">To keep connected with your teams please login with your credentials</h5>
  <%= link_to "Sign In", new_user_session_path, class: 'btn btn-outline-light btn-lg' %>
<% end %>

<% content_for :content do %>
  <h1 class="text-center">Create an account</h1>

  <div class="d-flex flex-column align-items-center mt-3">
    <%= render "devise/shared/omniauth_links" %>
    <p class="mt-3">or</p>
  </div>

  <div class="mt-3">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="mb-3">
        <%= f.text_field_with_label :name, autofocus: true %>
      </div>

      <div class="mb-3">
        <%= f.email_field_with_label :email, autocomplete: "email" %>
      </div>

      <div class="mb-3">
        <%= f.password_field_with_label :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <span class="form-text">(<%= @minimum_password_length %> characters minimum)</span>
        <% end %>
      </div>

      <div class="mb-3">
        <%= f.password_field_with_label :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="mb-3">
        <%= f.submit "Sign up", class: 'btn btn-primary btn-block' %>
      </div>
    <% end %>
  </div>

  <%= render "devise/shared/links" %>
<% end %>
