<% content_for :introduction do %>
  <h1 class="mb-3">Hello, Friend!</h1>
  <h5 class="mb-3">Enter your personal info and start to manage your own projects.</h5>
  <%= link_to "Sign Up", new_user_registration_path, class: 'btn btn-outline-light btn-lg' %>
<% end %>

<% content_for :content do %>
  <h1 class="text-center">Sign In</h1>

  <div class="mt-3">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-3">
        <%= f.email_field_with_label :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="mb-3">
        <%= f.password_field_with_label :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-3">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="mb-3">
        <%= f.submit "Log in", class: 'btn btn-primary btn-block' %>
      </div>
    <% end %>
  </div>

  <%= render "devise/shared/links" %>
<% end %>
