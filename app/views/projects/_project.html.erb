<%= link_to project_path(project), class: 'col-md-3 project-card p-3 mx-4 mb-4' do %>
  <span class="small text-muted"><%= project.created_at.strftime('%d/%m/%Y') %></span>
  <h4 class="project-card__name"><%= project.name %></h4>
  <div class="text-right">
    <span class="text-muted">
      <i class="far fa-file-alt"></i>
      <%= pluralize(project.tasks.count, 'task') %>
    </span>
  </div>
<% end %>
