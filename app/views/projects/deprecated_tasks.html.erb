<section>
  <header class="mb-5">
    <div class="d-flex align-items-center justify-content-between">
      <h1 class="display-4 font-weight-bold">Deprecated</h1>
      <p class="d-flex flex-column align-items-end">
        <%= link_to "Back to Board", project_path(@project) %>
      </p>
    </div>
  </header>
  <main data-controller="task">
    <% if @tasks.any? %>
      <% @tasks.each do |task| %>
        <div id="task-<%= task.slug %>" class="card">
          <div class="card-body d-flex align-items-center justify-content-between">
            <%= link_to project_task_url(@project, task) do %>
              <h5><%= task.title %></h5>
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="d-flex flex-column align-items-center">
        <h2><i class="fas fa-folder-open"></i></h2>
        <h3 class="text-center">
          You don't have deprecated tasks
        </h3>
      </div>
    <% end %>
  </main>
</section>
